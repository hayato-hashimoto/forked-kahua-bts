		  (td/ (if (delete-of s) ($$ "＊") ""))))
	   (map identity
		(make-kahua-collection <status>))))
    (table/ (tr/ (th/ ($$ "ステータスID"))
		 (th/ ($$ "表示名"))
		 (th/ ($$ "無効")))
	    (tr/ (td/ (input/ (@/ (type "text") (name "id")) ""))
		 (td/ (input/ (@/ (type "text") (name "disp")) ""))
		 (td/ (input/ (@/ (type "checkbox") (name "delete")) "off")))
	    (tr/ (td/ (input/ (@/ (type "submit") (name "submit") (value ($$ "登録"))))))))

