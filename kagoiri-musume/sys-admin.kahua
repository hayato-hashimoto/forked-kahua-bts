		  (td/ (if (delete-of t) ($$ "＊") ""))))
	   (map identity
		(make-kahua-collection <type>))))
    (table/ (tr/ (th/ ($$ "タイプID"))
		 (th/ ($$ "表示名"))
		 (th/ ($$ "無効")))
	    (tr/ (td/ (input/ (@/ (type "text") (name "id")) ""))
