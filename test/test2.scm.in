(test* "kagoiri-musume change password with good password"
       '(html
	 (head (title ?_) (meta ?@) (link ?@) (script ?@))
	 (body
	  (table
	   (tr 
	    (td (h1 ?_))
	    (td (a ?@ "トップ"))
	    (td (a ?@ "システム管理"))
	    (td (a ?@ "ユニット一覧"))
	    (td (a (@ (href ?&)) "パスワード変更"))
	    (td (a ?@ "[[Logout]]"))
	    (td (form ?@ "検索:" (input ?@)))
	    (td " Now login:" (a ?@ "cut-sea"))))
	  (hr)
	  (div ?@ (h3 "cut-sea さんのパスワードを変更しました"))))
       (call-worker/gsid w
			 '()
			 '(("old-pw" "cutsea") ("new-pw" "goodsea") ("new-again-pw" "goodsea"))
			 (lambda (h b) (tree->string b)))
       (make-match&pick w))

